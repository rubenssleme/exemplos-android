<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.consumoapiproduto">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConsumoAPIProduto"
        android:usesCleartextTraffic="true">
        <activity android:name=".controlador.CadastrarProdutoActivity" android:label="Cadastro produto">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BottomMenuActivity"
            android:label="@string/title_activity_bottom_menu">

        </activity>
        <activity
            android:name=".controlador.SplashActivity"
            android:label="Tela Splash"></activity>
        <activity
            android:name=".controlador.SpinnerActivity"
            android:label="Spinner" />
        <activity
            android:name=".controlador.ConsultaProdutoActivity"
            android:label="Consultar Produto">

        </activity>
        <activity
            android:name=".controlador.MenuActivity"
            android:label="Tela Menu" />
        <activity
            android:name=".controlador.LoginActivity"
            android:label="Tela Login" />
    </application>

</manifest>