<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/rlPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.bssoftware.projeto_umc_final.AddNoteActivity" >

        <EditText
            android:id="@+id/edGostou"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/m1"
            android:drawableStart="@drawable/m1"
            android:ems="10"
            android:inputType="text"
            android:hint="Você Gostou? Sim/Não"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20sp" >
        </EditText>

        <EditText
            android:id="@+id/edIndicacao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/nd"
            android:drawableStart="@drawable/nd"
            android:ems="10"
            android:hint="Indicaria? Sim/Não"
            android:inputType="text"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edSugestao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/ni"
            android:drawableStart="@drawable/ni"
            android:ems="10"
            android:hint="Deixe sua sugestão"
            android:padding="5dip"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="20dip" />

        <Button
            android:id="@+id/btEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#7A81AC"
            android:ems="8"
            android:gravity="center"
            android:text="@string/texto_botao_enviar"
            android:textColor="#ffffff" />
    </LinearLayout>

</ScrollView>