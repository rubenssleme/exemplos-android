<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__alterar__bebida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/fundo1"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Alterar_Bebida">

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/lblabCodig"
        android:layout_toEndOf="@+id/lblabCodig"
        android:layout_marginStart="17dp"
        android:id="@+id/txtabCodigo"
        android:background="@android:color/darker_gray" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/lblabNomeBebida"
        android:layout_alignStart="@+id/txtabCodigo"
        android:id="@+id/txtabNomeBebida"
        android:background="@android:color/darker_gray" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignBottom="@+id/lblabQuantidade"
        android:layout_toEndOf="@+id/txtabCodigo"
        android:id="@+id/txtabQuantidade"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Quantidade*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/lblabQuantidade"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/lblabNomeBebida"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Nome*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:id="@+id/lblabNomeBebida"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/lblabCodig"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Código*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/lblabCodig"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/gvabBebida"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/lblabNomeBebida"
        android:layout_marginBottom="11dp"
        android:id="@+id/lblabVoltar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark" />

    <ListView
        android:layout_width="340dp"
        android:layout_height="140dp"
        android:id="@+id/gvabBebida"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Ir Para Tela Deletar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblabIrParaTelaDeletar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/lblabVoltar"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Alterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnabAlterar"
        android:textStyle="normal|bold"
        android:layout_above="@+id/lblabIrParaTelaDeletar"
        android:layout_toStartOf="@+id/txtabNomeBebida"
        android:layout_marginBottom="23dp" />

    <TextView
        android:text="Descrição"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/lblabQuantidade"
        android:layout_alignStart="@+id/gvabBebida"
        android:layout_marginTop="18dp"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnabconsultar"
        android:layout_alignBottom="@+id/btnabAlterar"
        android:layout_toEndOf="@+id/txtabQuantidade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtabdescricao"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lblabQuantidade" />

</RelativeLayout>
