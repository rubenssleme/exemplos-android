<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__alterar__deletar__convidado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo1"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Alterar_Deletar_Convidado">

    <Button
        android:text="Deletar"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:id="@+id/btnadDeletar"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@+id/btnadconvAlterar"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/lbladconvVoltar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/textView2"
        android:text="Escolha a tela na qual deseja ser levado"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/lbladNomeEmpresa"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Web Zone T.D."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbladNomeEmpresa"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lbladconvVoltar"
        android:layout_marginStart="16dp" />

    <Button
        android:text="Alterar"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:id="@+id/btnadconvAlterar"
        android:textColor="@android:color/black"
        android:layout_above="@+id/lbladconvVoltar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp" />

</RelativeLayout>
