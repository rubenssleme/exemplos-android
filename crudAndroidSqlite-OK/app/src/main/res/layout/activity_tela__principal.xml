<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Principal">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/txtpUsuario"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtpUsuario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp"
        android:id="@+id/lblpSenha"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Happy Churras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/lblpInfo"
        android:fontFamily="cursive"
        android:textSize="36sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="UsuÃ¡rio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblpUsuario"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/txtpUsuario"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/lblpSenha"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:id="@+id/txtpSenha"
        android:textSize="18sp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Fazer Cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnpEntrar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:id="@+id/lblpFazerCadastro"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:text="Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnpEntrar"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
