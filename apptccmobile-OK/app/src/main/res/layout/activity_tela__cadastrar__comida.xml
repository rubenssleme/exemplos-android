<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__cadastrar__comida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/fundo1"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Cadastrar_Comida">

    <ListView
        android:layout_width="340dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gvccComida" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gvccComida"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/lblccNome"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtccNome"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/lblccNome"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtccQuantidade"
        android:textSize="18sp"
        android:layout_marginStart="19dp"
        android:background="@android:color/darker_gray"
        android:layout_alignBaseline="@+id/lblccQuantidade"
        android:layout_alignBottom="@+id/lblccQuantidade"
        android:layout_toEndOf="@+id/lblccQuantidade" />

    <TextView
   android:text="Alterar"
   android:layout_width="wrap_content"
   android:layout_height="wrap_content"
        android:id="@+id/lblccAlterar"
   android:textSize="18sp"
   android:textStyle="normal|bold"
   android:textColor="@color/colorPrimaryDark"
        android:layout_alignBottom="@+id/lblccVoltar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblccVoltar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <TextView
        android:text="Deletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblccDeletar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/gvccComida" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtccDescricao"
        android:background="@android:color/darker_gray"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/txtccQuantidade" />

    <TextView
        android:text="Descrição"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_below="@+id/lblccQuantidade"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/lblccQuantidade"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtccNome"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnccCadastrar"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/lblccAlterar"
        android:layout_alignStart="@+id/lblccAlterar" />

    <Button
        android:text="Consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnccConsultar"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/btnccCadastrar"
        android:layout_alignBottom="@+id/btnccCadastrar"
        android:layout_alignParentStart="true" />


</RelativeLayout>
