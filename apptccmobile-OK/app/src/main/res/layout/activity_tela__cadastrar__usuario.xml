<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__cadastrar__usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo1"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Cadastrar_Usuario">

    <TextView
        android:text="Preencha as informações abaixo para fazer o cadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lblcuTexto"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Nome*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblcuTexto"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/lblcuNome"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/lblcuNome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:id="@+id/txtcuNome"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Usuario*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcuNome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:id="@+id/lblcuUsuario"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/txtcuUsuario"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/lblcuUsuario"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Senha*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcuUsuario"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:id="@+id/lblcuSenha"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="@android:color/black" />

    <Button
        android:text="Cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btncuCadastrar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/lblcuVoltar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/txtcuSenha"
        android:textSize="18sp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/lblcuSenha"
        android:layout_alignParentStart="true" />
</RelativeLayout>
