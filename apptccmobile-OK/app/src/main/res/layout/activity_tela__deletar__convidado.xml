<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__deletar__convidado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo1"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Deletar_Convidado">

    <ListView
        android:layout_width="289dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:id="@+id/gvdconviConvidado"/>

    <TextView
        android:text="CÃ³digo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gvdconviConvidado"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:id="@+id/lbldconviCodigo"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/lbldconviVoltar"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/gvdconviConvidado" />

    <Button
        android:text="Deletar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btndconviDeletar"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_above="@+id/lbldconviVoltar"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtdconviCodigo"
        android:background="@android:color/darker_gray"
        android:layout_alignTop="@+id/lbldconviCodigo"
        android:layout_toEndOf="@+id/btndconviDeletar" />

    <Button
        android:text="Consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btndconviDeletar"
        android:layout_toEndOf="@+id/txtdconviCodigo"
        android:layout_marginStart="20dp"
        android:id="@+id/btndconviConsultar" />
</RelativeLayout>
