<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__alterar__comida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/fundo1"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Alterar_Comida">

    <ListView
        android:layout_width="360dp"
        android:layout_height="140dp"
        android:id="@+id/gvacComida"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Código*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gvacComida"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/lblacCodigo"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblacCodigo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:id="@+id/lblacNome"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/lblacNome"
        android:layout_toEndOf="@+id/lblacCodigo"
        android:id="@+id/txtacNome"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/lblacVoltar"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Ir para tela deletar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:id="@+id/lblacIrParaTelaDeletar"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtacdescricao"
        android:layout_marginTop="40dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/lblacQuantidade"
        android:layout_alignEnd="@+id/lblacIrParaTelaDeletar" />

    <TextView
        android:text="Descrição"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/background_dark"
        android:layout_alignBottom="@+id/txtacdescricao"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblacQuantidade"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtacNome"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtacQuantidade"
        android:background="@android:color/darker_gray"
        android:layout_alignBaseline="@+id/lblacQuantidade"
        android:layout_alignBottom="@+id/lblacQuantidade"
        android:layout_alignStart="@+id/txtacdescricao" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtacCodigo"
        android:background="@android:color/darker_gray"
        android:layout_alignBaseline="@+id/lblacCodigo"
        android:layout_alignBottom="@+id/lblacCodigo"
        android:layout_toEndOf="@+id/lblacQuantidade" />

    <Button
        android:text="Alterar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnacAlterar"
        android:layout_above="@+id/lblacIrParaTelaDeletar"
        android:layout_toEndOf="@+id/lblacNome" />

    <Button
        android:text="Consultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnacconsultar"
        android:layout_above="@+id/lblacIrParaTelaDeletar"
        android:layout_alignEnd="@+id/lblacIrParaTelaDeletar"
        android:layout_marginEnd="30dp" />

</RelativeLayout>
