<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela__cadastrar__convidado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/fundo1"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.bg.apptccmobile.controladores.Tela_Cadastrar_Convidado">

    <TextView
        android:text="Preencha as informações abaixo para adastrar seus convidados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/lblcconviInfo"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="12dp"
        android:id="@+id/txtcconviNome"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/lblcconviNome"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/lblcconviNome"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_below="@+id/lblcconviInfo"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_below="@+id/lblcconviEmail"
        android:layout_alignStart="@+id/lblcconviEmail"
        android:layout_marginTop="21dp"
        android:id="@+id/txtcconviEmail"
        android:textSize="18sp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/lblcconviEmail"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtcconviNome"
        android:layout_alignEnd="@+id/lblcconviNome" />

    <TextView
        android:text="Telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/lblcconviTelefone"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_below="@+id/txtcconviEmail"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_below="@+id/lblcconviTelefone"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/txtcconviTelefone"
        android:background="@android:color/darker_gray" />

    <TextView
        android:text="Idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtcconviTelefone"
        android:layout_alignStart="@+id/txtcconviEmail"
        android:layout_marginTop="24dp"
        android:id="@+id/lblcconviIdade"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/lblcconviIdade"
        android:layout_toEndOf="@+id/lblcconviTelefone"
        android:id="@+id/txtcconviIdade"
        android:background="@android:color/darker_gray" />

    <Button
        android:text="Cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btncconviCadastrar"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btncconviCadastrar"
        android:layout_marginStart="13dp"
        android:id="@+id/btncconviVoltar"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblcconviGerenciarConvidado"
        android:textStyle="normal|bold"
        android:text="Gerenciar Convidado"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/btncconviVoltar"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />
</RelativeLayout>
